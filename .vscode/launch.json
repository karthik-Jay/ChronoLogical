    "version": "0.2.0",
    "configurations": [
        {
            "name": "Browser:5173",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:5173",
            "webRoot": "${workspaceRoot}/views",
            "pathMappings": [
                {
                    "url": "http://localhost:5173/src",
                    "path": "${workspaceFolder}/src/ChronoLogical.Web/src"
                }
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\ChronoLogical.Web\\src\\components\\weekViewCalendar.tsx",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}